<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/setup_image"
                android:layout_marginTop="20dp"
                android:src="@drawable/default_pic"
                app:civ_border_color="#000"
                app:civ_border_width="2dp"
                android:layout_centerHorizontal="true"/>
            <ScrollView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/setup_image"
                android:layout_margin="@dimen/space_10dp"
                android:layout_marginBottom="100dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <!-- username section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/changeProfilePhoto"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/gray_border_bottom"
                        android:id="@+id/relLayout1">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_person_gray_24dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/setup_name"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="40dp"
                            android:background="@null"
                            android:textColor="#000"
                            android:text="Username "
                            android:inputType="textNoSuggestions"
                            android:hint="username"
                            android:layout_marginLeft="40dp" />

                    </RelativeLayout>


                    <!-- display_name section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/relLayout1"
                        android:background="@drawable/gray_border_bottom"
                        android:id="@+id/relLayout2"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_baseline_date_range_24"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/setup_skill"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="40dp"
                            android:background="@null"
                            android:textColor="#000"
                            android:text="Investment  Package Date "
                            android:inputType="numberDecimal"
                            android:hint="Banalce"
                            android:layout_marginLeft="40dp" />

                    </RelativeLayout>

//3
                    <!-- display_name section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/relLayout2"
                        android:background="@drawable/gray_border_bottom"
                        android:id="@+id/relLayout3"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_baseline_opacity_24"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/setup_skill1"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="40dp"
                            android:background="@null"
                            android:textColor="#000"
                            android:inputType="numberDecimal"

                            android:text="Investment  Package  "
                            android:layout_marginLeft="40dp" />

                    </RelativeLayout>
                    //4
                    <!-- display_name section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/relLayout3"
                        android:background="@drawable/gray_border_bottom"
                        android:id="@+id/relLayout4"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_baseline_money_24"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/setup_ski1ll"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="40dp"
                            android:background="@null"
                            android:inputType="numberDecimal"
                            android:hint="Banalce"
                            android:text="Investment  Balance "
                            android:textColor="#000"
                            android:layout_marginLeft="40dp" />

                    </RelativeLayout>
                    //333
                    //4
                    <!-- display_name section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/relLayout4"
                        android:background="@drawable/gray_border_bottom"
                        android:id="@+id/relLayout5"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_baseline_attach_money_24"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/setup1_ski1ll"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="40dp"
                            android:background="@null"
                            android:textColor="#000"
                            android:inputType="numberDecimal"
                            android:hint="Banalce"
                            android:text="Profit"
                            android:layout_marginLeft="40dp" />

                    </RelativeLayout>
                    <com.google.android.gms.ads.AdView
                        android:layout_below="@id/relLayout5"
                        android:layout_marginTop="@dimen/space_5dp"
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        ads:adSize="BANNER"
                        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
                    </com.google.android.gms.ads.AdView>
                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>